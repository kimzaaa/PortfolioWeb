---
const { title } = Astro.props;
---
<div class="topprojects">
    <h1 class="header">{title}</h1>
</div>

<style>
    .topprojects {
        margin-bottom: 30px;
        display: flex;
        justify-content: center;
        width: 100%;
        height: 100vh;
    }
    .header {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 128px;
        margin: 0;
        margin-top:400px;
        letter-spacing: 2px;
        color: #fd7f5e;
        text-align: center;
        letter-spacing: 2px;
    }
    @media (max-width: 768px) {
        .header {
            font-size: 48px;
        }
    }
</style>