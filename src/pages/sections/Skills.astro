---
import skillsData from '../../data/skills.json';
import { FaGlobe, FaReact, FaUnity } from 'react-icons/fa';
import { SiCplusplus } from 'react-icons/si';
import { GiPianoKeys } from 'react-icons/gi';
import { BsMusicNote } from 'react-icons/bs';

const iconMap = {
    "Web Dev": FaGlobe,
    "App Dev": FaReact,
    "Game Dev": FaUnity,
    "General Coding": SiCplusplus,
    "Instruments": GiPianoKeys,
    "Composition": BsMusicNote
};
---
<div id="Skills">
    <div class="bg-header">
        <p class="header-text"> Skills</p>
    </div>
</div>

<style>
    #Skills {
        background-color: #0A0B0C;
        min-height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow-x: hidden;
    }
    
    .bg-header {
        margin-top: 60px;
        width: 300px;
        height: 100px;
        background-color: #fd7f5e;
        flex-shrink: 0;
        position: relative;
        z-index: 10;
    }
    
    .header-text {
        font-family: 'Bebas Neue', sans-serif;
        font-weight: normal;
        margin: 0;
        color: white;
        font-size: 58px;
        letter-spacing: 2px;
        margin-left: 140px;
        padding-top: 15px;
    }

    .content-container {
        flex-grow: 1;
        padding: 40px 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 120px;
        width: 100%;
        max-width: 1400px;
        margin-top: 30px
    }

    .skill-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 30px;
        border: 1px solid rgba(0, 0, 0, 0.5);
        border-radius: 20px;
        background-color: rgba(255, 255, 255, 0.02);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .skill-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(253, 127, 94, 0.2);
        border-color: #fd7f5e;
    }

    .icon-wrapper {
        margin-bottom: 25px;
    }

    .icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background-color: #fd7f5e;
        box-shadow: 0 0 20px rgba(253, 127, 94, 0.4);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .skill-card h3 {
        color: white;
        font-family: 'Montserrat', sans-serif;
        margin: 0 0 25px 0;
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        width: 100%;
    }

    .skill-chip {
        background-color: #0f1115;
        color: #e0e0e0;
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 14px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
        border: 1px solid #2a2a2a;
        transition: all 0.2s ease;
        cursor: none;
        position: relative;
    }

    .skill-chip:hover {
        border-color: #fd7f5e;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(253, 127, 94, 0.1);
    }

    .tooltip {
        position: absolute;
        bottom: 120%;
        left: 50%;
        transform: translateX(-50%);
        background-color: #1a1c1e;
        border: 1px solid #fd7f5e;
        padding: 12px;
        border-radius: 8px;
        width: 160px;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        pointer-events: none;
        z-index: 100;
        box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    }

    .skill-chip:hover .tooltip {
        opacity: 1;
        visibility: visible;
        bottom: 135%;
    }
    
    .tooltip::after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;
        margin-left: -6px;
        border-width: 6px;
        border-style: solid;
        border-color: #fd7f5e transparent transparent transparent;
    }

    .tooltip-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        font-size: 12px;
    }

    .level {
        color: #a0a0a0;
        font-weight: 500;
    }

    .percent {
        color: #fd7f5e;
        font-weight: bold;
    }

    .progress-bar {
        width: 100%;
        height: 6px;
        background-color: #333;
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background-color: #fd7f5e;
        border-radius: 3px;
        transition: width 0.5s ease-out;
    }

    @media (max-width: 1200px) {
        .skills-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
        }
    }

    @media (max-width: 768px) {
        .skills-grid {
            grid-template-columns: 1fr;
        }
        .content-container {
            padding: 20px;
        }
        .header-text {
            margin-left: 20px;
        }
        .bg-header {
            width: 100%;
        }
    }
</style>