---
import AwardCard from "../../components/AwardsCard.jsx";

import AwardData from '../../data/awards.json';
---

<div id="Skills">
    <div class="content-wrapper">
        <div class="header-row">
            <div class="bg-header">
                <p class="header-text">Awards</p>
            </div>
        </div>
        <div class="grid-container">
            <div class="awards-grid">
                {AwardData.map((project) => (
                <AwardCard 
                    title={project.title} 
                    year={project.year}
                >
                    <p> </p>
                </AwardCard>
             ))}
            </div>
        </div>
    </div>
</div>

<style>
    #Skills {
        background-color: #0A0B0C;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 100px 50px 0;
    }

    .content-wrapper {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .header-row {
        width: 100%;
        display: flex;
        justify-content: flex-start;
        margin-bottom: 30px;
    }

    .bg-header {
        width: fit-content;
        padding: 5px 70px;
        background-color: #fd7f5e;
        transform: translateX(-40px);
    }

    .header-text {
        font-family: 'Bebas Neue', sans-serif;
        font-weight: normal;
        margin: 0;
        color: white;
        font-size: clamp(36px, 5vw, 58px);
        letter-spacing: 2px;
        transform: translateX(40px);
    }

    .grid-container {
        width: 100%;
        display: flex;
        justify-content: center;
        padding-top: 40px;
    }

    .awards-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(300px, 1fr));
        gap: clamp(20px, 2vw, 40px);
        width: 100%;
        max-width: 1800px;
    }

    @media (max-width: 1200px) {
        .awards-grid {
            grid-template-columns: repeat(2, minmax(250px, 1fr));
        }
    }

    @media (max-width: 768px) {
        .awards-grid {
            grid-template-columns: 1fr;
        }
    }
</style>